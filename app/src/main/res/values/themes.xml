<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FIrebaseAndroid" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryVariant">@color/deep_orange_300</item>
        <item name="colorOnPrimary">@color/blue_gray_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy_blue_100</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Creamos un estilo para el splash. -->


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
<!--        <item name="colorPrimary">@color/light_blue_600</item>-->
<!--        <item name="colorPrimaryDark">@color/deep_orange_300</item>-->
<!--        <item name="colorAccent">@color/blue_gray_50</item>-->
        <item name="android:statusBarColor">@color/light_blue_600</item>
    </style>

</resources>